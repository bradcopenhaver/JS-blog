{{#if newPostForm}}
  <h4>Create New Post</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="text">Post text:</label>
        {{input value=text id="text" placeholder=post.text}}
      </div>

      <button {{action 'save'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'newPostForm'}}>Create New Post</button>
{{/if}}
