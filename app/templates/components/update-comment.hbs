{{#if updateCommentForm}}
  <h4>Update {{comment.author}}'s comment'</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=comment.author}}
      </div>

      <div class="form-group">
        <label for="text">Post text:</label>
        {{input value=text id="text" placeholder=comment.text}}
      </div>

      <button {{action 'updateComment' comment}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateCommentForm'}}>Update</button>
{{/if}}
